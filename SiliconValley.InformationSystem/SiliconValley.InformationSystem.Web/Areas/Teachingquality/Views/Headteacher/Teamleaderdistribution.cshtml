            return function (b, a) {
                var x1 = a[prop].toUpperCase();
                var x2 = b[prop].toUpperCase();
                if (x1 < x2) {
                    return 1;
                }
                if (x1 > x2) {
                    return -1;
                }
                return 0;
            }
