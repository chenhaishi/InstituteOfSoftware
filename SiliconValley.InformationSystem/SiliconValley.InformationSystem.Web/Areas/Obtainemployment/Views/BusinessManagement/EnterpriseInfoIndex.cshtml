                , anim: "2" /* 改变弹出层弹出方式*/
                , end: function () {
                    MrDtableIns.reload('Enterprise', {
                        page: {
                            curr: 1 //重新从第 1 页开始
                        }
                    });
                }
            });
        }

        //显示条件查询
        function WhyShow(value) {
            MrDtableIns.reload({
                where: {
                    whyshow: value
                }
                , page: {
                    curr: 1
                }
            });
        }

