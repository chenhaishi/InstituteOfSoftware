<script>
    layui.use('element', function () {
        var $ = layui.jquery
            , element = layui.element; //Tab的切换功能，切换事件监听等，需要依赖element模块
        console.log(element);
        element.on('tab(docDemoTabBrief)', function (elem) {
            location.hash = 'test=' + $(this).attr('lay-id');
            console.log($(this).attr('lay-id'));
        });

    });
    layui.use('laydate', function () {
        var laydate = layui.laydate;
        laydate.render({
            elem: '#test2'
            , type: 'year'
            , done: function (value, date, endDate) {
                console.log(value); //得到日期生成的值，如：2017-08-18
                console.log(date); //得到日期时间对象：{year: 2017, month: 8, date: 18, hours: 0, minutes: 0, seconds: 0}
                console.log(endDate); //得结束的日期时间对象，开启范围选择（range: true）才会返回。对象成员同上。
                bind(value);
            }
        });
    });
    var objsx = [];
    var objsy = [];
    var bind = function (date) {
        $.ajax({
            type: "post",
            async: false,
            url: "/Admin/XZAdminHome/GetCharts",
            data: { date: date },
            dataType: "json",
            error: function (errorMsg) { alert(errorMsg); },
            success: function (result) {
                for (var i = 0; i < result.sum.length; i++) {
                    var l = result.count[i] / (result.sum[i] + result.count[i]) * 100;
                    console.log(l.toFixed(2));
                    objsy[i] = JSON.parse(l.toFixed(2));//以特定的JSON的格式接收数字；
                    objsx[i] = result.name[i];//以JSON的方式接收字符串
                    console.log(result.name[i]);
                }
                var myChart = echarts.init(document.getElementById('mian'));
                option = {
                    tooltip: {
                        trigger: 'axis',
                        axisPointer: {            // 坐标轴指示器，坐标轴触发有效
                            type: 'shadow'        // 默认为直线，可选为：'line' | 'shadow'
                        }
                    },
                    grid: {
                        left: '3%',
                        right: '4%',
                        bottom: '3%',
                        containLabel: true
                    },
                    xAxis: [
                        {
                            type: 'category',
                            data: objsx,
                            axisTick: {
                                alignWithLabel: true
                            }
                        }
                    ],
                    yAxis: [
                        {
                            type: 'value'
                        }
                    ],
                    series: [
                        {
                            name: '升学率',
                            type: 'bar',
                            barWidth: '60%',
                            data: objsy
                        }
                    ]
                };
                // 使用刚指定的配置项和数据显示图表。
                myChart.setOption(option);
            }
        });
    }
    bind();
    // console.log($("#test2").val());




</script>
