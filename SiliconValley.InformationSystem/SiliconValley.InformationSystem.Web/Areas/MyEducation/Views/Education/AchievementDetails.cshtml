@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
    <link href="~/Scripts/layui/css/layui.css" rel="stylesheet" />
    <script src="~/Scripts/layui/layui.js"></script>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/layui/layui.all.js"></script>
</head>
<body>
    <div>
        <div class="layui-card">
            <div class="row">
                <div class="layui-col-md6">
                    <div class="layui-card-header">学生历次考试信息</div>
                    <div class="layui-card-body">
                        <table id="test" lay-filter="test"></table>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="layui-col-md6">
                    <div class="layui-card-header">考生合格成绩信息</div>
                    <div class="layui-card-body">
                        <table id="pass" lay-filter="pass"></table>
                    </div>
                </div>
            </div>
          
        </div>
    </div>
    <script>
        layui.use(['table', 'layer', 'tree', 'form'], function () {
            var table = layui.table;
            var layer = layui.layer;
            var form = layui.form;
            var tree = layui.tree;
            var tree = layui.tree;
            var stunumber = '@ViewBag.stunumber';
            //表格渲染
            table.render({
                elem: '#test'
                , url: '/MyEducation/Education/GetDetails?stunumber=' + stunumber
                , toolbar: false
                , id: 'test'
                , cellMinWidth: 80 //全局定义常规单元格的最小宽度，layui 2.2.1 新增
                , cols: [[
                    { type: 'radio' }
                    , { field: 'id', title: '序号' }
                    , { field: 'Examinationperiod', title: '考期' }
                    , { field: 'Coursecode', title: '课程代码 ' }
                    , { field: 'Coursetitle', title: '课程名称' }
                    , { field: 'Fraction', title: '分数' }
                ]]
                , page: true
                , limits: [5, 10, 15, 20, 25, 30]
                , limit: 5
            });
            table.render({
                elem: '#pass'
                , url: '/MyEducation/Education/GetDetailspass?stunumber=' + stunumber
                , toolbar: false
                , id: 'pass'
                , cellMinWidth: 80 //全局定义常规单元格的最小宽度，layui 2.2.1 新增
                , cols: [[
                    { type: 'radio' }
                    , { field: 'id', title: '序号' }
                    , { field: 'Examinationperiod', title: '考期' }
                    , { field: 'Coursecode', title: '课程代码 ' }
                    , { field: 'Coursetitle', title: '课程名称' }
                    , { field: 'Fraction', title: '分数' }
                ]]
                , page: true
                , limits: [5, 10, 15, 20, 25, 30]
                , limit: 5
            });
        })
    </script>
</body>
</html>
