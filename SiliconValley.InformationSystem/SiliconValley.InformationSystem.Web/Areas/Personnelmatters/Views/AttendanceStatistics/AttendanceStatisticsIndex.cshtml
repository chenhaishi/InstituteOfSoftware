    </fieldset>

    <table id="CheckingIntab" lay-filter="CheckingIntab"></table>
</div>



@section script{
    <script>
        layui.use(['table', 'layer', 'form', 'laydate', 'element'], function () {
            var table = layui.table;
            var layer = layui.layer;
            var form = layui.form;
            var laydate = layui.laydate;
            var element = layui.element;

            table.render({
                elem: '#CheckingIntab'
                , url: '/Personnelmatters/AttendanceStatistics/GetCheckingInData'
                , id: "myAttendanceinfo"
                , toolbar: '#toolbarDemo'
                , limits: [5, 10, 15, 20, 25, 30]
                , limit: 10
                , cols: [@*[{ title: "应到勤天数：" + "@ViewBag.DeserveToRegularDays" + "天", colspan: 20 }],*@
                    [
                      { type: 'checkbox', width: 28, rowspan: 2}
                    , { field: 'empName', title: '姓名', width: 100, sort: true }
                    , { field: 'empDept', title: '所属部门', width: 110, sort: true }
                    , { field: 'empPosition', title: '所属岗位', width: 110, sort: true }
                    , { field: 'DeserveToRegularDays', title: '应到勤天数', sort: true, width: 120 }
                    , { field: 'ToRegularDays', title: '到勤天数',  width: 95 }
                    , { field: 'LeaveDays', title: '请假天数', width: 95 }
                    , { field: 'LeaveRecord', title: '请假记录', width: 95 }
                    , { field: 'NoClockTotalNum', title: '总缺卡次数', width: 110}
                    , { field: 'WorkAbsentNum', title: '上班缺卡次数',width: 120}
                    , { field: 'WorkAbsentRecord', title: '上班缺卡记录', width: 120 }
                    , { field: 'NoonAbsentNum', title: '中午缺卡次数', width: 120 }
                    , { field: 'NoonAbsentRecord', title: '中午缺卡记录', width: 120 }
                    , { field: 'OffDutyAbsentNum', title: '下班缺卡次数', width: 120 }
                    , { field: 'OffDutyAbsentRecord', title: '下班缺卡记录', width: 120 }
                    , { field: 'AbsentNumWithhold', title: '缺卡扣款', width: 100 }
                    , { field: 'TardyNum', title: '迟到次数', width: 100 }
                    , { field: 'TardyRecord', title: '迟到记录', width: 100 }
                    , { field: 'LeaveEarlyNum', title: '早退次数', width: 100 }
                    , { field: 'LeaveEarlyRecord', title: '早退记录', width: 100 }
                    , { field: 'TardyAndLeaveWithhold', title: '迟到/早退扣款', width: 140 }
                    , { field: 'AbsenteeismRecord', title: '旷工记录', width: 100 }
                    , { field: 'AbsenteeismDays', title: '旷工天数', width: 100 }
                    , { field: 'AbsenteeismWithhold', title: '旷工扣费', width: 100 }
                    , { field: 'OvertimeCharges', title: '加班费用', width: 100 }
                    , { field: 'DaysoffRecord', title: '调休记录', width: 100 }
                    , { field: 'DaysoffDuration', title: '调休时长(h)', width: 110 }
                    , { field: 'Remark', title: '备注', width: 140 }
                    , { field: 'empIsDel', title: '员工状态', sort: true, width: 110, templet: '#empstate' }
                    , { title: '操作', toolbar: '#barDemo', width: 150, fixed: 'right' }
                ]]
                , page: true

            });

            //头工具栏事件
            table.on('toolbar(CheckingIntab)', function (obj) {
                var checkStatus = table.checkStatus(obj.config.id);
                switch (obj.event) {
                    case 'InportTime':
                        InportTime();
                        break;
                    case 'BatchImport':
                        BatchImport();
                        break;
                    case 'OvertimeRecordImport':
                        OvertimeRecordImport();
                        break;
                    case 'BatchAdd':
                        BatchAdd();
                        break;
                    case 'timeanddaysChange':
                        TimeandDaysChange();
                        break;
                    case 'Approved':
                        var time = '@ViewBag.yearandmonth';
                        console.log("我的时间：" + JSON.stringify(time));
                        if (JSON.stringify(time) != "{}") {
                            $.ajax({
                                type: "post",
                                dataType: "json",
                                async: false,
                                url: "/Personnelmatters/AttendanceStatistics/IsConfirmApproval",
                                data: { time:time } ,
                                //报错请加入以下三行，则ajax提交无问题
                                //cache: false,
                                //processData: false,
                                //contentType: false,
                                success: function (data) {
                                    if (data.ErrorCode == 200) {
                                        if (data.Success) {
                                            ConfirmApproval(time);
                                        } else {
                                            layer.alert(data.Data, { icon: 1 }, function (index) {
                                                var index = parent.layer.getFrameIndex(window.name); //先得到当前iframe层的索引
                                                window.parent.location.reload();
                                                parent.layer.close(index);
                                            });
                                        }
                                    } else {
                                        layer.msg("系统错误,请联系后台管理员!");
                                    }
                                }
                            });
                        } else {
                            layer.msg("没有数据可审批!");
                        }
                        break;
                };
            });

            //监听行工具事件
            table.on('tool(CheckingIntab)', function (obj) {
                var data = obj.data;
                var id = data.AttendanceId;
                if (obj.event === 'edit') {
                    $.post('/Personnelmatters/AttendanceStatistics/JudgeIsApproval', { 'id': id }, function (da) {
                        if (da.ErrorCode == 200) {
                            if (da.Success) {
                                layer.msg("该员工本月考勤已确认审批了，不可编辑！", {
                                    icon: 1,
                                    time: 5000 //2秒关闭（如果不配置，默认是3秒）
                                }, function () {
                                    var index = parent.layer.getFrameIndex(window.name); //先得到当前iframe层的索引
                                    window.parent.location.reload();
                                    parent.layer.close(index);
                                    //var index = parent.layer.getFrameIndex(window.name);
                                    //parent.layui.table.reload('mySalaryStatistics');
                                    //parent.layer.close(index);
                                });
                            }
                            else {
                                layer.open({
                                    type: 2,
                                    content: '/Personnelmatters/AttendanceStatistics/EditAttendanceInfo/?id=' + data.AttendanceId
                                    , area: ["1000px", "600px"]
                                    , title: '编辑员工考勤信息'
                                    , shade: 0.8
                                    , anim: 4
                                    , skin: 'demo-class'
                                });
                            }
                        } else {
                            layer.alert("系统出错，请多次尝试后");
                        }

                    });

                } else if (obj.event ==='OvertimeRecorddetail') {
                    layer.open({
                        type: 2,
                        content: '/Personnelmatters/AttendanceStatistics/OTRDetail/?id=' + id
                        , area: ['1100px', '600px'],
                        title: '加班详细信息'
                        , shade: 0.8
                        , anim: 4
                        , skin: 'demo-class'
                    });
                }

            });

            //模糊查询点击事件
            $("#Conditionselect").click(function () {
                var ename = $("#EmpName").val();//员工姓名
                var deptname = $("#deptid").val();//员工所属部门
                var pname = $("#PositionId").val();//员工所属岗位
                var empstate = $("#empIsDel").val();//性别
                console.log("员工状态" + empstate);
                layui.use(['table'], function () {
                    var table = layui.table;
                    table.reload('myAttendanceinfo', {
                        page: {
                            curr: 1 //重新从第 1 页开始
                        }, where: {
                            AppCondition: ename + "," + deptname + "," + pname + "," + empstate
                        }
                    });
                });



            });

        });

        //打卡时间导入
        function InportTime() {
            layui.use(['layer'], function (args) {
                var layer = layui.layer;      //layui对象
                layer.open({
                    type: 2
                    , area: ["400px", "400px"]
                    , title: "打卡时间导入"
                    , content: '/Educational/TeacherAddorBeonDuty/TableInsert'
                    , anim: 2
                });
            })

        }

        //批量（导入excel数据）添加考勤信息
        function BatchAdd() {
            layui.use(['layer'], function (args) {
                var layer = layui.layer;      //layui对象
                layer.open({
                    type: 2
                    , area: ["400px", "400px"]
                    , title: "批量导入"
                    , content: '/Personnelmatters/AttendanceStatistics/BatchAdd'
                    , anim: 2
                });
            })

        }

        //批量添加考勤信息
        function BatchImport() {
            layui.use(['layer'], function (args) {
                var layer = layui.layer;      //layui对象
                layer.open({
                    type: 2
                    , area: ["700px", "600px"]
                    , title: "批量导入"
                    , content: '/Personnelmatters/AttendanceStatistics/BatchImport'
                    , anim: 2
                });
            })

        }

        function OvertimeRecordImport() {
            layui.use(['layer'], function (args) {
                var layer = layui.layer;      //layui对象
                layer.open({
                    type: 2
                    , area: ["700px", "600px"]
                    , title: "加班记录导入"
                    , content: '/Personnelmatters/AttendanceStatistics/OvertimeRecordImport'
                    , anim: 2
                });
            })

        }

        //年月份/应到勤天数改变（查看记录）
        function TimeandDaysChange() {
            layui.use(['layer'], function (args) {
                var layer = layui.layer;      //layui对象
                layer.open({
                    type: 2
                    , area: ["400px", "400px"]
                    , title: ""
                    , content: '/Personnelmatters/AttendanceStatistics/ChangeTimeandDays'
                    , anim: 2
                });

            })

        }

        //"确认审批"按钮事件
        function ConfirmApproval(time) {
            layer.confirm('确认已完成该月份考勤的线下审批，且开始进行线上确认审批？<br/><span style="color:red;">注：一经确认将不可进行任何修改！</span>', function (index) {
                $.post('/Personnelmatters/AttendanceStatistics/ConfirmApproval', { 'time': time }, function (da) {
                    if (da) {
                        layer.alert("操作成功!", { icon: 1 }, function (index) {
                            var index = parent.layer.getFrameIndex(window.name); //先得到当前iframe层的索引
                            window.parent.location.reload();
                            parent.layer.close(index);
                        });
                    }
                    else {
                        layer.alert("操作失败!");
                    }
                })

            });
        }


        //格式化时间
        function GetYearAndMonth(cellval) {
            if (cellval != null) {
                var date;
                if (cellval.indexOf("/Date(") >= 0) {
                    date = new Date(parseInt(cellval.replace("/Date(", "").replace(")/", ""), 10));
                }
                else {
                    date = new Date(cellval);
                }

                var month = date.getMonth() + 1 < 10 ? "0" + (date.getMonth() + 1) : date.getMonth() + 1;
                var currentDate = date.getDate() < 10 ? "0" + date.getDate() : date.getDate();
                var hour = date.getHours() < 10 ? "0" + date.getHours() : date.getHours();
                var minute = date.getMinutes() < 10 ? "0" + date.getMinutes() : date.getMinutes();
                var ss = date.getSeconds() < 10 ? "0" + date.getSeconds() : date.getSeconds();

                return date.getFullYear() + "-" + month;
            } else {
                return "";
            }
        }
    </script>


    @*部门与岗位的下拉框动态赋值及下拉框二级联动*@
    <script>
        layui.use(['form', 'upload', 'layer'], function () {

            var form = layui.form;
            $.ajax({
                url: '/Personnelmatters/EmployeesInfo/BindDeptSelect',
                data: {},
                dataType: "json",
                success: function (resultData) {
                    $("#deptid").empty();
                    if (resultData.code == 0) {

                        $("#deptid").append(new Option("请选择部门", ""));
                        $.each(resultData.data, function (index, item) {
                            $('#deptid').append(new Option(item.DeptName, item.DeptId));
                        });
                    } else {
                        $("#deptid").append(new Option("暂无数据", ""));
                    }

                    layui.form.render("select");
                }
            });

            //级联子项目
            //select 监听
            form.on('select(deptidfilter)', function (data) {
                var value = data.value;  //select选中的值
                console.log("选中值" + value);
                $.ajax({
                    url: "/Personnelmatters/EmployeesInfo/BindPositionSelect",
                    data: { deptid: value },
                    dataType: "json",
                    success: function (resultData) {
                        if (resultData.code == 0) {
                            //清空赋值
                            $("#PositionId").empty();
                            console.log(resultData.data);
                            $("#PositionId").append(new Option("请选择岗位", ""));
                            $.each(resultData.data, function (index, item) {
                                //赋值
                                $('#PositionId')
                                    .append(new Option(item.PositionName, item.Pid));
                            });
                        } else {
                            $("#PositionId").append(new Option("暂无数据", ""));
                        }
                        layui.form.render("select");
                    }
                });
            })
            layui.form.render("select");

        });
    </script>

}