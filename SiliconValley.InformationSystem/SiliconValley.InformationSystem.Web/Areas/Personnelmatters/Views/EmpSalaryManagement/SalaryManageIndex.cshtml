                    ]
                    ,[
                     { field: 'TardyAndLeaveWithhold', title: '迟到/早退扣款(元)', width: 115 }
                    , { field: 'NoClockWithhold', title: '缺卡扣款(元)', width: 115 }
                    , { field: 'AbsentNumWithhold', title: '旷工扣款(元)', width: 115 }
                    ]
                ]
                , page: true
            });

            //头工具栏事件
            table.on('toolbar(salarytab)', function (obj) {
                var checkStatus = table.checkStatus(obj.config.id);
                switch (obj.event) {
                    case 'timeUpdate':
                        TimeUpdate();
                        break;
                    case 'Approved':
                       var time = '@ViewBag.yearandmonth';
                        console.log("我的时间：" + JSON.stringify(time));
                        if (JSON.stringify(time) != "{}") {
                            $.ajax({
                                type: "post",
                                dataType: "json",
                                async: false,
                                url: "/Personnelmatters/EmpSalaryManagement/IsConfirmApproval",
                                data: { time:time } ,
                                //报错请加入以下三行，则ajax提交无问题
                                //cache: false,
                                //processData: false,
                                //contentType: false,
                                success: function (data) {
                                    if (data.ErrorCode == 200) {
                                        if (data.Success) {
                                            ConfirmApproval(time);
                                        } else {
                                            layer.alert(data.Data, { icon: 1 }, function (index) {
                                                var index = parent.layer.getFrameIndex(window.name); //先得到当前iframe层的索引
                                                window.parent.location.reload();
                                                parent.layer.close(index);
                                            });
                                        }
                                    } else {
                                        layer.msg("系统错误,请联系后台管理员!");
                                    }
                                }
                            });
                        } else {
                            layer.msg("没有数据可审批!");
                        }
                        break;
                    case 'forbiddenEmp':
                        var data = checkStatus.data;
                        console.log(data);
                        if (data == 0) {
                            layui.use('layer', function () {
                                var layer = layui.layer;
                                layer.alert('请至少选中一条记录', { title: '提示信息', icon: 0 }, function (index) {
                                    layer.close(index);
                                });
                            });
                        } else {
                            layer.confirm('确定禁用选中的员工?', function (index) {
                                delSalaryEmpinfo(data);
                            });
                        }
                        break;
                    case 'Email':
                         var time = '@ViewBag.yearandmonth';
                        console.log("我的时间：" + JSON.stringify(time));
                        if (JSON.stringify(time) != "{}") {
                            var load = layer.load(1);
                            $.ajax({
                                type: "post",
                                dataType: "json",
                                async: false,
                                url: "/Personnelmatters/EmpSalaryManagement/JudgmentOfSalaryDetails",
                                data: { time:time } ,
                                success: function (data) {
                                    layer.close(load);
                                    if (data.ErrorCode == 200) {
                                        if (data.Success) {
                                            layer.confirm(data.Data, { icon: 3, title: '提示' }, function (index) {
                                                JudgmentOfSalaryDetails(time);
                                            })
                                        } else {
                                            layer.alert(data.Data, { icon: 1 }, function (index) {
                                                var index = parent.layer.getFrameIndex(window.name); //先得到当前iframe层的索引
                                                window.parent.location.reload();
                                                parent.layer.close(index);
                                            });
                                        }
                                    } else {
                                        layer.msg("系统错误,请联系后台管理员!");
                                    }
                                }
                            });
                        } else {
                            layer.msg("没有数据!");
                        }
                        //laydate.render({
                        //    elem: "#month",
                        //    type: 'month'
                        //})
                      //var open= layer.open({
                      //    type: 1,
                      //    closeBtn: 0,
                      //    content: $("#datamonth").removeClass("layui-hide"),
                      //    btn: ['确定', '取消'],
                      //    yes: function () {
                      //          layer.close(open);
                      //        $("#datamonth").addClass("layui-hide");
                       
                           
                        //  },
                        //  btn2: function () {
                        //      $("#datamonth").addClass("layui-hide");
                        //  }
                        //})
                        break;
                    case 'Salary':
                        var time = '@ViewBag.yearandmonth';
                        //layer.open({
                        //    type: 2,
                        //    area: ["400px", "350px"],
                        //    content: '/Personnelmatters/EmpSalaryManagement/MonthlySalaryExport'
                        //    , title: '月度工资导出'
                        //    , shade: 0.8
                        //    , anim: 4
                        //    , skin: 'demo-class'
                        //});
                        window.open("/Personnelmatters/EmpSalaryManagement/MonthlySalaryExport?time=" + time);
                        break;
                };
            });


            //监听行工具事件
            table.on('tool(salarytab)', function (obj) {
                var data = obj.data;
                if (obj.event === 'edit') {
                    var id = data.Id;
                    console.log("工资编号：" + id);
                    $.post('/Personnelmatters/EmpSalaryManagement/JudgeIsApproval', { 'id': id }, function (da) {
                        if (da.ErrorCode == 200) {
                            if (da.Success) {
                                layer.msg("该员工本月工资已确认审批了，不可编辑！", {
                                    icon: 1,
                                    time: 5000 //2秒关闭（如果不配置，默认是3秒）
                                }, function () {
                                    var index = parent.layer.getFrameIndex(window.name);
                                    parent.layui.table.reload('mySalaryStatistics');
                                    parent.layer.close(index);
                                });
                            }
                            else {
                                if (data.IsFinancialAudit!=2) {
                                    layer.open({
                                        type: 2,
                                        content: '/Personnelmatters/EmpSalaryManagement/EditEmpSalary/?id=' + id
                                        , area: ["500px", "500px"]
                                        , title: '编辑员工月度工资信息'
                                        , shade: 0.8
                                        , anim: 4
                                        , skin: 'demo-class'
                                    });
                                } else {
                                    layer.open({
                                        type: 2,
                                        content: '/Personnelmatters/EmpSalaryManagement/ModifyAbnormalData/?id=' + id
                                        , area: ["800px", "650px"]
                                        , title: '编辑员工月度工资信息'
                                        , shade: 0.8
                                        , anim: 4
                                        , skin: 'demo-class'
                                    });
                                }

                            }
                        } else {
                            layer.alert("系统出错，请多次尝试后");
                        }

                    });

                }

            });


            //模糊查询点击事件
            $("#Conditionselect").click(function () {
                var ename = $("#EmpName").val();//员工姓名
                var deptname = $("#deptid").val();//员工所属部门
                var pname = $("#PositionId").val();//员工所属岗位
                var Empstate = $("#Empstate").val();
                layui.use(['table'], function () {
                    var table = layui.table;
                    table.reload('mySalaryStatistics', {
                        page: {
                            curr: 1 //重新从第 1 页开始
                        }, where: {
                            AppCondition: ename + "," + deptname + "," + pname + "," + Empstate
                        }
                    });
                });



            });


        });
        //年月份改变
        function TimeUpdate() {
            layui.use(['layer'], function (args) {
                var layer = layui.layer;      //layui对象
                layer.open({
                    type: 2
                    , area: ["400px", "350px"]
                    , title: ""
                    , content: '/Personnelmatters/EmpSalaryManagement/UpdateTime'
                    , anim: 2
                });

            })

        }

        //"确认审批"按钮事件
            function ConfirmApproval(time) {
                layer.confirm('确认已完成该月份月度工资的线下审批，且开始进行线上确认审批？<br/><span style="color:red;">注：一经确认将不可进行任何修改！</span>', function (index) {
                    var l = layer.load(1);
                    $.post('/Personnelmatters/EmpSalaryManagement/ConfirmApproval', { 'time': time }, function (da) {
                        if (da) {
                            layer.close(l);
                            layer.alert("操作成功!", { icon: 1 }, function (index) {
                                var index = parent.layer.getFrameIndex(window.name); //先得到当前iframe层的索引
                                window.parent.location.reload();
                                parent.layer.close(index);
                            });
                        }
                        else {
                            layer.alert("操作失败!");
                        }
                    })
                });
            }
        function JudgmentOfSalaryDetails(time) {
            var loadindex = layer.load(1);
            $.ajax({
                url: "/Personnelmatters/EmpSalaryManagement/PaySlipExcel",
                type: "post",
                data: JSON.stringify({ "time": time }),
                dataType: "json",
                contentType: "Application/json",
                processData: false,
                success: function (data) {
                    layer.close(loadindex);

                    if (data.Success) {
                        var msg = "";
                        if (data.ErrorCode == 100) {//没有一条数据出错
                            msg = "发送成功!  发送数量：" + data.Msg;
                        } else if (data.ErrorCode == 200) {
                            var errdata = data.Data;//录入错误的数据
                            var detailerrdata = "";
                            for (var i = 0; i < errdata.length; i++) {
                                detailerrdata += "姓名为" + errdata[i].empname + "的工资详情发送出错，原因是：" + errdata[i].errorExplain + "<br/>";
                            };
                            msg = "成功" + data.Msg + "条数据" + errdata.length +
                                "条数据发送失败。失败数据分析如下：</br>" + detailerrdata;
                        }
                        layer.alert(msg, { icon: 1 }, function () {
                            // window.document.location.reload();
                            var index = parent.layer.getFrameIndex(window.name); //先得到当前iframe层的索引
                            window.parent.location.reload();
                            parent.layer.close(index);

                        });
                    } else {
                        console.log(data.Data);
                        layer.alert(data.Data, { icon: 2 });
                    }
                    //if (data.Success) {
                    //    layer.close(index)
                    //    layer.alert(data.Msg, { icon: 1 });
                    //} else {
                    //    layer.close(index)
                    //    layer.alert("邮件发送失败" + data.Data, { icon: 2 });
                    //}
                }
            })
       
        }
        //"禁用"员工的按钮事件
        function delSalaryEmpinfo(data) {
            var list = "";
            for (var i = 0; i < data.length; i++) {

                list += data[i].Id + ",";
                console.log(list);
            }
            $.post("/Personnelmatters/EmpSalaryManagement/DeleteSalaryManageEmp", { 'list': list }, function (da) {
                console.log(da);
                if (da.Success) {
                    layer.alert("已禁用!", { icon: 1 }, function (index) {
                        layui.use(['table'], function () {
                            var table = layui.table;
                            table.reload('mySalaryStatistics');
                        });
                        layer.close(index);
                    });
                }
                else {
                    layer.alert("禁用失败!");
                }
            })


        }

    </script>

    @*部门与岗位的下拉框动态赋值及下拉框二级联动*@
    <script>
        layui.use(['form', 'upload', 'layer'], function () {

            var form = layui.form;
            $.ajax({
                url: '/Personnelmatters/EmployeesInfo/BindDeptSelect',
                data: {},
                dataType: "json",
                success: function (resultData) {
                    $("#deptid").empty();
                    if (resultData.code == 0) {

                        $("#deptid").append(new Option("请选择部门", ""));
                        $.each(resultData.data, function (index, item) {
                            $('#deptid').append(new Option(item.DeptName, item.DeptId));
                        });
                    } else {
                        $("#deptid").append(new Option("暂无数据", ""));
                    }

                    layui.form.render("select");
                }
            });

            //级联子项目
            //select 监听
            form.on('select(deptidfilter)', function (data) {
                var value = data.value;  //select选中的值
                console.log("选中值" + value);
                $.ajax({
                    url: "/Personnelmatters/EmployeesInfo/BindPositionSelect",
                    data: { deptid: value },
                    dataType: "json",
                    success: function (resultData) {
                        if (resultData.code == 0) {
                            //清空赋值
                            $("#PositionId").empty();
                            console.log(resultData.data);
                            $("#PositionId").append(new Option("请选择岗位", ""));
                            $.each(resultData.data, function (index, item) {
                                //赋值
                                $('#PositionId')
                                    .append(new Option(item.PositionName, item.Pid));
                            });
                        } else {
                            $("#PositionId").append(new Option("暂无数据", ""));
                        }
                        layui.form.render("select");
                    }
                });
            })
            layui.form.render("select");

        });
    </script>
