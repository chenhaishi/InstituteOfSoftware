                    , { field: 'EmpState', title: '员工状态', width: 100, rowspan: 2, templet: '#empstate' }
                    //, { field: 'IsFinancialAudit', title: '财务审核状态', sort: true, width: 110, fixed: "right", templet: '#Audit' }
