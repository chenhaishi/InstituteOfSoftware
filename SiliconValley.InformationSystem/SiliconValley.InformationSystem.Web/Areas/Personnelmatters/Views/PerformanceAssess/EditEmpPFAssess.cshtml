                       data.RoutineWorkFillRate = data.RoutineWorkFillRate > 0 && data.RoutineWorkFillRate <= 1 ? (data.RoutineWorkFillRate * 100) + "%" : data.RoutineWorkFillRate > 1 ? data.RoutineWorkFillRate + "%" : null,
                       data.OtherWorkPropotion = data.OtherWorkPropotion > 0 && data.OtherWorkPropotion <= 1 ? (data.OtherWorkPropotion * 100) + "%" : data.OtherWorkPropotion > 1 ? data.OtherWorkPropotion + "%" : null,
                       data.OtherWorkFillRate = data.OtherWorkFillRate > 0 && data.OtherWorkFillRate <= 1 ? (data.OtherWorkFillRate * 100) + "%" : data.OtherWorkFillRate > 1 ? data.OtherWorkFillRate + "%" : null,
                        form.val("Positive", data);

                });
            })
        }


