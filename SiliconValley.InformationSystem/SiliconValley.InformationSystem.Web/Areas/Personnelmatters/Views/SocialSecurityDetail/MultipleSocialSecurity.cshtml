@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
    <link href="~/Scripts/layui/css/layui.css" rel="stylesheet" />
    <script src="~/Scripts/layui/layui.js"></script>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
</head>
<body>
    <div>
        <form class="layui-form" action="" id="formtest" lay-filter="formtest">
            <input name="id" value="@ViewBag.id" class="layui-hide" />
            <div class="layui-container" style="margin-top:25px">
                <div class="layui-form-item">
                    <label class="layui-form-label">补缴月份:</label>
                    <div class="layui-input-inline" style="width:300px;">
                        <input type="text" name="OverPayMonthNum" class="layui-input" />
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">缴费基数:</label>
                    <div class="layui-input-inline" style="width:300px;">
                        <input type="text" name="PaymentBase" class="layui-input" />
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">单位部分:</label>
                    <div class="layui-input-inline" style="width:300px;">
                        <input type="text" name="UnitTotal" class="layui-input" />
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">个人部分:</label>
                    <div class="layui-input-inline" style="width:300px;">
                        <input type="text" name="PersonalTotal" class="layui-input" />
                    </div>
                </div>
            </div>
            <div class="layui-form-item" style="margin-left:50px;margin-top:70px;">
                <div class="layui-input-block">
                    <button class="layui-btn " lay-submit="" type="button" lay-filter="demo1">立即提交</button>
                    <button class="layui-btn " id="btnclose1">关闭</button>
                </div>
            </div>
        </form>
    </div>
    <script>
        layui.use(['form', 'layer'], function () {
            var form = layui.form, layer = layui.layer
            form.on('submit(demo1)', function (data) {
                console.log(data.field);
                $.ajax({
                    url: "/Personnelmatters/SocialSecurityDetail/MultipleSocialSecurity",
                    type: "post",
                    data: JSON.stringify({
                        "id": data.field.id,
                        "soc": data.field
                    }),
                    dataType: "json",
                    contentType: "Application/json",
                    success: function (data) {
                        if (data.Success) {
                            layer.alert(data.Msg, function () {
                                var index = parent.layer.getFrameIndex(window.name);
                                parent.layui.table.reload('Soctab');
                                parent.layer.close(index);
                            });
                        } else {
                            layer.alert(data.Msg);
                        }
                    }
                })
                return false;
            });
            $("#btnclose1").click(function () {
                var index = parent.layer.getFrameIndex(window.name);
                parent.layui.table.reload({});
                parent.layer.close(index);
            });
        });
    </script>
</body>
</html>
