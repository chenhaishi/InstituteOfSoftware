            });//社保起始月份
            laydate.render({
                elem: '#IdCardIndate'
            })
            //自定义验证
            form.verify({
                myIdCardNum: function (value, item) {
                    if (value == '') {
                        return '';
                    } else {
                        var ver = /(^\d{15}$)|(^\d{18}$)|(^\d{17}(\d|X|x)$)/;
                        if (!ver.test(value)) {
                            return '身份证号码为15位或者18位，15位时全为数字，18位前17位为数字，最后一位是校验位，可能为数字或字符X';
                        }
                    }
                },//身份证号
                myUrgentPhone: function (value, item) {
                    if (value == '') {
                        return '';
                    } else {
                        var v = /^1[3456789]\d{9}$/;
                        if (!v.test(value)) {
                            return '号码格式输入错误';
                        }
                    }
                },//联系电话
                mymonth: function (value, item) {
                    if (value == '') {
                        return '';
                    } else {
                        var v = /^0[1-9]$|^[1-9]$|^1[0-2]$/;
                        if (!v.test(value)) {
                            return '月份只能是1至12之间';
                        }
                    }
                },//验证月份
                myday: function (value, item) {
                    if (value == '') {
                        return '';
                    } else {
                        var v = /^0[1-9]$|^[1-9]$|^1[0-9]$|^2[0-9]$|^3[0-1]$/;
                        if (!v.test(value)) {
                            return '月份只能是1至31之间';
                        }
                    }
                },//验证哪天
                myBCNum: function (value, item) {
                    if (value == '') {
