@{
    Layout = null;
}
@model SiliconValley.InformationSystem.Entity.MyEntity.EmployeesInfo
@using SiliconValley.InformationSystem.Entity.MyEntity;

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AddEmp</title>
    <link href="~/Scripts/layui/css/layui.css" rel="stylesheet" />
    <script src="~/Scripts/layui/layui.js"></script>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>

    <style>
        #but1 {
            position: absolute;
            top: 13%;
            left: 35%;
            width: 36px;
            height: 36px;
            text-align: center;
            line-height: 36px;
        }

            #but1:hover {
                background-color: aqua;
            }

        #Nation {
            width: 100px;
        }

        .linu {
            height: 120px;
        }
        .needTextColor {
            color: red
        }
    </style>
</head>
<body>

    <div>
        <form class="layui-form" action="">
            <div class="layui-container">
                <div class="layui-row layui-form-item">

                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label needTextColor">姓名:</label>
                        <div class="layui-input-inline">
                            @Html.TextBoxFor(a => a.EmpName, new Dictionary<string, object>() { { "lay-verify", "required" }, { "placeholder", "请输入姓名" }, { "class", "layui-input " } })
                        </div>
                    </div>

                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label">性别:</label>
                        <div class="layui-input-block">
                            <input type="radio" name="Sex" value="男" title="男" checked>
                            <input type="radio" name="Sex" value="女" title="女">
                        </div>
                    </div>

                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label needTextColor">钉钉工号:</label>
                        <div class="layui-input-block">
                            @Html.TextBoxFor(a => a.DDAppId, new Dictionary<string, object>() { { "lay-verify", "required|number|CheckDDNum" }, { "placeholder", "请输入员工钉钉号" }, { "class", "layui-input" } })
                        </div>
                    </div>
                </div>

                <div class="layui-row layui-form-item">

                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label needTextColor">所属部门:</label>
                        <div class="layui-input-block">
                            <select name="deptid" id="deptid" lay-filter="deptidfilter" lay-verify="required">
                                <option value="-1">请选择所属部门</option>
                            </select>

                        </div>
                    </div>

                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label needTextColor">所属岗位:</label>
                        <div class="layui-input-block">
                            <select name="PositionId" id="PositionId" lay-verify="required" lay-search="">
                                <option value="-1">请先选择所属部门</option>
                            </select>
                        </div>
                    </div>

                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label">民族:</label>
                        <div class="layui-input-block">
                            @Html.TextBoxFor(a => a.Nation, new Dictionary<string, object>() { { "placeholder", "请输入民族" }, { "class", "layui-input" } })
                        </div>
                    </div>
                </div>

                <div class="layui-row layui-form-item">

                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label needTextColor">手机号码:</label>
                        <div class="layui-input-block">
                            @Html.TextBoxFor(a => a.Phone, new Dictionary<string, object>() { { "lay-verify", "required|phone" }, { "placeholder", "请输入电话号码" }, { "class", "layui-input" } })
                        </div>
                    </div>

                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label needTextColor">身份证号:</label>
                        <div class="layui-input-block">
                            @Html.TextBoxFor(a => a.IdCardNum, new Dictionary<string, object>() { { "lay-verify", "required|myIdCardNum" }, { "placeholder", "请输入身份证号" }, { "class", "layui-input " } })
                        </div>
                    </div>

                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label needTextColor">入职时间:</label>
                        <div class="layui-input-block">
                            @Html.TextBoxFor(a => a.EntryTime, new Dictionary<string, object>() { { "lay-verify", "required|EntryTime" }, { "placeholder", "yyyy-MM-dd" }, { "class", "layui-input" } })
                        </div>
                    </div>
                </div>

                <div class="layui-row layui-form-item">

                    <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                        <label class="layui-form-label" style="width:120px;margin-left:-40px;">合同起始时间:</label>
                        <div class="layui-input-block" style="width:320px;">
                            @Html.TextBoxFor(a => a.ContractStartTime, new Dictionary<string, object>() { { "placeholder", "yyyy-MM-dd" }, { "class", "layui-input" } })
                        </div>
                    </div>

                    <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                        <label class="layui-form-label" style="width:120px;margin-left:-60px;">合同终止时间:</label>
                        <div class="layui-input-block">
                            @Html.TextBoxFor(a => a.ContractEndTime, new Dictionary<string, object>() { { "placeholder", "yyyy-MM-dd" }, { "class", "layui-input" } })
                        </div>
                    </div>

                </div>

                <div class="layui-row layui-form-item">
                    <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                        <label class="layui-form-label">生日:</label>
                        <div class="layui-input-inline">
                            <input style="width:50px;height:30px;display:inline-block;" id="month" name="month" class="layui-input" lay-verify="mymonth" />
                            <label style="margin-left:5px;display:inline-block;">  月</label>
                        </div>

                        <div class="layui-input-inline" style="margin-left:-120px;">
                            <input type="text" style="width:50px;height:30px;display:inline-block;" id="day" name="day" class="layui-input" lay-verify="myday" />
                            <label style="margin-left:5px;display:inline-block;">日</label>
                        </div>

                        <div class="layui-input-inline" style="margin-left:-100px;">
                            <input type="radio" name="yinyang" value="农历" title="农历" checked>
                            <input type="radio" name="yinyang" value="阳历" title="阳历">
                        </div>
                    </div>
                    <input type="hidden" id="Birthday" value="Birthday" />

                    <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                        <label class="layui-form-label" style="width:120px;margin-left:-60px;">身份证有效期:</label>
                        <div class="layui-input-block">
                            @Html.TextBoxFor(a => a.IdCardIndate, new Dictionary<string, object>() { { "lay-verify", "IdCardIndate" }, { "placeholder", "yyyy-MM-dd" }, { "class", "layui-input" } })
                        </div>
                    </div>

                </div>

                <div class="layui-row layui-form-item">

                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label">招聘来源:</label>
                        <div class="layui-input-block">
                            @Html.TextBoxFor(a => a.InvitedSource, new Dictionary<string, object>() { { "class", "layui-input " } })
                        </div>
                    </div>

                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label">户籍地址:</label>
                        <div class="layui-input-block">
                            @Html.TextBoxFor(a => a.DomicileAddress, new Dictionary<string, object>() { { "placeholder", "请输入户籍地址" }, { "class", "layui-input" } })
                        </div>
                    </div>

                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label">现居地址:</label>
                        <div class="layui-input-block">
                            @Html.TextBoxFor(a => a.Address, new Dictionary<string, object>() { { "placeholder", "请输入现居地址" }, { "class", "layui-input " } })
                        </div>
                    </div>

                </div>

                <div class="layui-row layui-form-item">

                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label" style="margin-left:-40px;width:120px;">紧急联系电话:</label>
                        <div class="layui-input-block">
                            @Html.TextBoxFor(a => a.UrgentPhone, new Dictionary<string, object>() { { "lay-verify", "myUrgentPhone" }, { "placeholder", "请输入紧急联系电话" }, { "class", "layui-input" } })
                        </div>
                    </div>

                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label">政治面貌:</label>
                        <div class="layui-input-block">
                            <select name="PoliticsStatus" id="PoliticsStatus">
                                <option value="党员">党员</option>
                                <option value="团员">团员</option>
                                <option value="群众">群众</option>
                            </select>
                        </div>
                    </div>

                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label">学历:</label>
                        <div class="layui-input-block">
                            <select name="Education" id="Education">
                                <option value="大专">大专</option>
                                <option value="博士">博士</option>
                                <option value="硕士">硕士</option>
                                <option value="本科">本科</option>
                                <option value="高中">高中</option>
                                <option value="中专">中专</option>
                                <option value="初中">初中</option>
                                <option value="小学">小学</option>
                                <option value="群众">群众</option>
                            </select>
                        </div>
                    </div>

                </div>

                <div class="layui-row layui-form-item">

                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label">婚姻状态:</label>
                        <div class="layui-input-block">
                            <input type="radio" name="MaritalStatus" value="False" title="未婚" checked>
                            <input type="radio" name="MaritalStatus" value="True" title="已婚">
                        </div>
                    </div>

                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label">试用期工资:</label>
                        <div class="layui-input-block">
                            @Html.TextBoxFor(a => a.ProbationSalary, new Dictionary<string, object>() { { "placeholder", "请输入试用期工资" }, { "class", "layui-input salary" } })
                        </div>
                    </div>

                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label needTextColor">转正后工资:</label>
                        <div class="layui-input-block">
                            @Html.TextBoxFor(a => a.Salary, new Dictionary<string, object>() { { "lay-verify", "required" }, { "placeholder", "请输入转正工资" }, { "class", "layui-input salary" } })
                        </div>
                    </div>

                </div>

                <div class="layui-row layui-form-item">

                    <div class="layui-col-xs4 layui-col-sm4 layui-col-md4">
                        <label class="layui-form-label">银行卡号:</label>
                        <div class="layui-input-block">
                            @Html.TextBoxFor(a => a.BCNum, new Dictionary<string, object>() { { "lay-verify", "myBCNum" }, { "placeholder", "请输入银行卡号" }, { "class", "layui-input" } })
                        </div>
                    </div>

                    <div class="layui-col-xs8 layui-col-sm8 layui-col-md8">
                        <label class="layui-form-label">材料:</label>
                        <div class="layui-input-block">
                            @Html.TextAreaFor(a => a.Material, new Dictionary<string, object>() { { "class", "layui-input linu" } })
                        </div>
                    </div>

                </div>

                <div class="layui-row layui-form-item">

                    <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                        <label class="layui-form-label">备注:</label>
                        <div class="layui-input-block">
                            @Html.TextAreaFor(a => a.Remark, new Dictionary<string, object>() { { "class", "layui-input linu" } })
                        </div>
                    </div>

                    <div class="layui-col-xs6 layui-col-sm6 layui-col-md6">
                        <label class="layui-form-label">图片:</label>
                        <div class="layui-input-block">
                            <input type="file" id="Image" name="Image" />
                            <div style="border:0px solid #808080;width:460px;height:200px;">
                                <img id="showimg" style="width:460px;height:200px;" />
                            </div>
                        </div>
                    </div>

                </div>

            </div>

            <div class="layui-form-item" style="margin-left:400px;margin-top:30px;">
                <div class="layui-input-block">
                    <button class="layui-btn " lay-submit="" type="button" lay-filter="demo1">立即提交</button>
                    <button class="layui-btn " id="btnclose1">关闭</button>
                </div>
            </div>
        </form>
    </div>

    @*部门与岗位的下拉框动态赋值及下拉框二级联动*@
    <script>
        layui.use(['form', 'upload', 'layer'], function () {

            var form = layui.form;
            $.ajax({
                url: '/Personnelmatters/EmployeesInfo/BindDeptSelect',
                data: {},
                dataType: "json",
                success: function (resultData) {
                    $("#deptid").empty();
                    if (resultData.code == 0) {

                        $("#deptid").append(new Option("请选择部门", ""));
                        $.each(resultData.data, function (index, item) {
                            $('#deptid').append(new Option(item.DeptName, item.DeptId));
                        });
                    } else {
                        $("#deptid").append(new Option("暂无数据", ""));
                    }

                    layui.form.render("select");
                }
            });

            //级联子项目
            //select 监听
            form.on('select(deptidfilter)', function (data) {
                var value = data.value;  //select选中的值
                console.log("选中值" + value);
                $.ajax({
                    url: "/Personnelmatters/EmployeesInfo/BindPositionSelect",
                    data: { deptid: value },
                    dataType: "json",
                    success: function (resultData) {
                        if (resultData.code == 0) {
                            //清空赋值
                            $("#PositionId").empty();
                            console.log(resultData.data);
                            $("#PositionId").append(new Option("请选择岗位", ""));
                            $.each(resultData.data, function (index, item) {
                                //赋值
                                $('#PositionId').append(new Option(item.PositionName, item.Pid));
                            });
                        } else {
                            $("#PositionId").append(new Option("暂无数据", ""));
                        }
                        layui.form.render("select");
                    }
                });
            })
            layui.form.render("select");

        });
    </script>


    <script>
        //异步读取图片并显示
        document.querySelector("#Image").onchange = function () {
            //1.0获取选择的文件
            var f = this.files[0];
            //创建文件读取器
            var file = new FileReader();
            //读取文件,参数代表要读取的文件
            file.readAsDataURL(f);

            //开始读取文件
            //file.start();
            //注意文件的读取时异步读取的
            //要在file.onload事件中才能获取到文件的内容
            file.onload = function (e) {
                console.log(e.target.result);
                document.querySelector("#showimg").src = e.target.result;
            };
           
            //最后通过file.result属性返回读取文件的内容
            //document.querySelector("#showimg").src = file.result;
        }


        layui.use(['form', 'layedit', 'laydate'], function () {
            var form = layui.form
                , layer = layui.layer
                , layedit = layui.layedit
                , laydate = layui.laydate;

            //日期验证
            var entryTime = laydate.render({
                elem: '#EntryTime',
                done: function (value, date) {
                    startTime.config.min = {
                        year: date.year,
                        month: date.month - 1,//关键
                        date: date.date,
                        hours: date.hours,
                        minutes: date.minutes,
                        seconds: date.seconds
                    },
                        endTime.config.min = {
                            year: date.year,
                            month: date.month - 1,//关键
                            date: date.date,
                            hours: date.hours,
                            minutes: date.minutes,
                            seconds: date.seconds}
                }
            }); //入职时间
            var startTime = laydate.render({
                elem: '#ContractStartTime',
                done: function (value, date) {
                    console.log("开始时间：" + $("#ContractStartTime").val());
                    endTime.config.min = {
                        year: date.year,
                        month: date.month - 1,//关键
                        date: date.date,
                        hours: date.hours,
                        minutes: date.minutes,
                        seconds: date.seconds
                    },
                    entryTime.config.max = {
                        year: date.year,
                        month: date.month - 1,//关键
                        date: date.date,
                        hours: date.hours,
                        minutes: date.minutes,
                        seconds: date.seconds
                    }
                }
            });//合同起始时间
            var endTime = laydate.render({
                elem: '#ContractEndTime',
                done: function (value, date) {
                    startTime.config.max = {
                        year: date.year,
                        month: date.month - 1,//关键
                        date: date.date,
                        hours: date.hours,
                        minutes: date.minutes,
                        seconds: date.seconds
                    },
                    entryTime.config.max = {
                            year: date.year,
                            month: date.month - 1,//关键
                            date: date.date,
                            hours: date.hours,
                            minutes: date.minutes,
                            seconds: date.seconds
                        }
                }
            });//合同终止时间
            laydate.render({
                elem: '#IdCardIndate',
            });//身份证有效期

            //自定义验证
            form.verify({
                myIdCardNum: function (value, item) {
                    if (value == '') {
                        return '';
                    } else {
                        var ver = /(^[1-9]\d{5}(18|19|([23]\d))\d{2}((0[1-9])|(10|11|12))(([0-2][1-9])|10|20|30|31)\d{3}[0-9Xx]$)|(^[1-9]\d{5}\d{2}((0[1-9])|(10|11|12))(([0-2][1-9])|10|20|30|31)\d{2}$)/;
                        if (!ver.test(value)) {
                            return '身份证号码为15位或者18位，15位时全为数字，18位前17位为数字，最后一位是校验位，可能为数字或字符X';
                        }
                    }
                },//身份证号
                myUrgentPhone: function (value, item) {
                    if (value == '') {
                        return '';
                    } else {
                        var v = /^1[3456789]\d{9}$/;
                        if (!v.test(value)) {
                            return '号码格式输入错误';
                        }
                    }
                },//紧急联系电话
                mymonth: function (value, item) {
                    if (value == '') {
                        return '';
                    } else {
                        var v = /^0[1-9]$|^[1-9]$|^1[0-2]$/;
                        if (!v.test(value)) {
                            return '月份只能是1至12之间';
                        }
                    }
                },//验证月份
                myday: function (value, item) {
                    if (value == '') {
                        return '';
                    } else {
                        var v = /^0[1-9]$|^[1-9]$|^1[0-9]$|^2[0-9]$|^3[0-1]$/;
                        if (!v.test(value)) {
                            return '天数只能是1至31之间';
                        }
                    }
                },//验证哪天
                myBCNum: function (value, item) {
                    if (value == '') {
                        return '';
                    } else {
                        var v = /^(\d{16}|\d{19})$/;
                        if (!v.test(value)) {
                            return '银行卡号只能是16-19位数字';
                        }
                    }
                },//验证银行卡号
                CheckDDNum: function (value, item) {
                    if (value == '') {
                        return '';
                    } else {
                        var resultdata = check(value);
                        console.log(resultdata);
                        return resultdata;
                    } 
                }//验证钉钉号是否重复
            });

            function check(value) {  
                var str;
                $.ajax({
                    url: '/Personnelmatters/EmployeesInfo/CheckDDNum',
                    type: 'get',
                    async: false,
                    data: { ddnum: value},
                    success: function (successdata) {
                        if (successdata.Success) {
                            str = '已经存在该钉钉号，请重新输入！';
                        } else {
                            str = '';
                        }
                    },
                    error: function (errordata) {
                        str = '网络不佳！';
                    }
                });
                return str;             
            }
            //工资输入判断
            $(".salary").keyup(function () {
                var reg = $(this).val().match(/\d+\.?\d{0,2}/);
                var txt = '';
                if (reg != null) {
                    txt = reg[0];
                }
                $(this).val(txt);
            }).change(function () {
                $(this).keypress();
                var v = $(this).val();
                if (/\.$/.test(v)) {
                    $(this).val(v.substr(0, v.length - 1));
                }
            });


            //添加提交
            form.on('submit(demo1)', function (data) {
                var loadindex = layer.load(1);
                if (data.field.month!= "" && data.field.day != "") {
                    data.field.Birthday = data.field.month + "月" + data.field.day + "日" + data.field.yinyang;
                }
               
                var fd = new FormData();
                var myimg = document.querySelector("#Image").files[0];
                fd.append('Image', myimg);
                for (var item in data.field) {
                    fd.append(item, data.field[item]);
                }
                console.log(fd);

              
                console.log($("#Image").val());
                $.ajax({
                    type: "post",
                    url: "/Personnelmatters/EmployeesInfo/AddEmpInfo",
                    data: fd,
                    dataType: "json",

                    //报错请加入以下三行，则ajax提交无问题
                    cache: false,
                    processData: false,
                    contentType: false,
                    success: function (data) {
                        layer.close(loadindex);
                        if (data.Success) {
                            layer.alert("添加成功!", { icon: 1 }, function () {
                                var index = parent.layer.getFrameIndex(window.name); //先得到当前iframe层的索引
                                parent.layui.table.reload('myEmpInfo');
                                parent.layer.close(index);

                            });
                        } else {
                            layer.alert("添加失败!");
                        }
                    }
                });
                
            });

            //关闭添加页面
            $("#btnclose1").click(function () {
                var index = parent.layer.getFrameIndex(window.name);
                parent.layer.close(index);
            });
        });




    </script>


</body>

</html>
