
@{
    ViewBag.Title = "MarkingPapers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section style{

    <style>

        #mywarp {
            position: relative;
            width: 100%;
        }

        #infofixd {
            position: fixed;
            width: 85%;
            -moz-box-shadow: 2px 2px 5px #333333;
            -webkit-box-shadow: 2px 2px 5px #333333;
            box-shadow: 2px 2px 5px #333333;
            height: 140px;
            top: 65px;
            border-radius: 1em;
            z-index: 1;
            border: 1px solid gray;
        }

        #paper {
            position: relative;
            width: 100%;
            border: 1px solid gray;
            margin-top: 130px;
            border-radius: 1em;
        }

        #stayMarkingArea {
            float: left;
            width: 49%;
            height: 100%;
            border: 0px solid red;
            border-right: 1px solid gray;
        }

        #MarkingInfoArea {
            float: left;
            width: 50%;
            height: 100%;
            border: 0px solid red;
            border-left: 1px solid gray;
        }

        .tayMarkinglist {
            list-style-type: none;
        }

            .tayMarkinglist .tayMarkingitem {
                width: 320px;
                float: left;
                font-size: 20px;
                color: gray;
                border: 0px solid red;
                border-bottom: 1px solid gray;
                margin-left: 50px;
                margin-top: 30px;
                cursor: pointer;
            }

        .infoitem {
            display: inline-block;
            margin-left: 30px;
            margin-top: 10px;
            width: 250px;
        }

            .infoitem span {
                color: green;
            }

        #paper .answerSheetItem {
            margin-top: 30px;
            display: block;
        }

        #butDiv {
            width: 600px;
            margin: 0 auto;
            margin-top: 50px;
        }

            #butDiv button {
                width: 100px;
            }

        #RecordScoreFloadDiv {
            position: absolute;
            width: 100%;
            height: 150px;
            border: 1px solid gray;
            border-radius: 1em;
            bottom: 0px;
            display: none;
            background-color: white;
        }

        .LableCss1 {
            text-overflow: ellipsis;
            white-space: nowrap;
            float: left;
            display: block;
            padding: 9px 15px;
            width: 200px;
            font-weight: 400;
            line-height: 20px;
            text-align: right
        }

        .floatbtn {
            display: inline-block;
            text-align: right;
        }

        #Stulist {
            width: 100%;
            height: 60px;
            margin-top: 20px;
            border: 1px solid gray;
            overflow-x: scroll;
            overflow-y: hidden; /* 超出内容不可见 */
            white-space: nowrap;
            display: none;
        }

            #Stulist ul {
                list-style-type: none;
            }

                #Stulist ul li {
                    float: left;
                    width: 200px;
                }

        #biaoji {
            display: none;
        }

        .currentstudent {
            background-color: #20419d;
        }
    </style>
}
<div id="infofixd">

    <div id="stayMarkingArea">

        <ul class="tayMarkinglist"></ul>

    </div>

    <div id="MarkingInfoArea">


        <div>

            <div class="infoitem examName">考试名称--<span></span></div>
            <div class="infoitem examDate">考试时间--<span></span></div>
            <div class="infoitem totalPaper">试卷总数量--<span></span></div>
            <div class="infoitem filshPaper">已阅卷数量--<span></span></div>
            <a class="btn btn-danger" id="YiJian">一键下载机试</a>
        </div>
    </div>
</div>


