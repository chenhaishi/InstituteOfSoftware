            $("#AddDate").text(getNowFormatDate(date));
        }
        if (Receiptdata[i].Rategory == "阶段费用缴纳" || Receiptdata[i].Rategory == "学费" || Receiptdata[i].Rategory == "食宿费") {
            var Amountofmoney = Receiptdata[i].Amountofmoney + ".00";
        
            
