
@{
    Layout = null;
}

@using SiliconValley.InformationSystem.Entity.MyEntity
@model SiliconValley.InformationSystem.Entity.MyEntity.Curriculum
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>OperationView</title>
    <link href="~/Scripts/layui/css/layui.css" rel="stylesheet" />
    <style>

        .layui-layer-title {
            background-color:#7fcf8d;
        }

       
    </style>
</head>
<body>
    <div id="warp">

        <div id="editarea">
          
            <form class="layui-form">
                @Html.HiddenFor(d => d.CurriculumID)
                <div class="layui-form-item">
                    <div class="layui-inline">
                        <label class="layui-form-label">课程名称：</label>
                        <div class="layui-input-inline">

                            @Html.TextBoxFor(c => c.CourseName, new Dictionary<string, object> { { "lay-verify", "required" }, { "class", "layui-input" } })
                        </div>
                    </div>
                    <div class="layui-inline">
                        <label class="layui-form-label">所属专业：</label>
                        <div class="layui-input-inline">
                            @Html.DropDownListFor(d => d.MajorID, ViewBag.majors as IEnumerable<SelectListItem>, "----无----")

                        </div>
                    </div>
                </div>

                <div class="layui-form-item">

                    <div class="layui-inline">
                        <label class="layui-form-label">所属阶段：</label>
                        <div class="layui-input-inline">
                            @Html.DropDownListFor(d => d.Grand_Id, ViewBag.grands as IEnumerable<SelectListItem>)
                        </div>
                    </div>

                    <div class="layui-inline">
                        <label class="layui-form-label">课程类型：</label>
                        <div class="layui-input-inline">
                            @Html.DropDownListFor(d => d.CourseType_Id, ViewBag.courseTypes as IEnumerable<SelectListItem>)

                        </div>
                        <label class="layui-form-label">考试笔试比率：</label>
                        <div class="layui-input-inline">

                            @Html.TextBoxFor(c => c.ratio, new Dictionary<string, object> { { "lay-verify", "required" }, { "class", "layui-input" }, { "type", "number" }, { "Min", 0 } })
                        </div>
                        <label style="color:gray;" class="layui-form-label">单位:%</label>
                    </div>
                </div>


                <div class="layui-form-item">
                    <div class="layui-inline">
                        <label class="layui-form-label">课时：</label>
                        <div class="layui-input-inline">

                            @Html.TextBoxFor(c => c.CourseCount, new Dictionary<string, object> { { "lay-verify", "required" }, { "class", "layui-input" }, { "type", "number" }, { "Min", 0 } })
                        </div>
                    </div>

                    <div class="layui-inline">
                        <label class="layui-form-label">课时费：</label>
                        <div class="layui-input-inline">
                            @Html.TextBoxFor(c => c.PeriodMoney, new Dictionary<string, object> { { "lay-verify", "required" }, { "class", "layui-input" }, { "type", "number" }, { "Min", 0 } })
                        </div>
                        <label style="color:gray;" class="layui-form-label">单位:RMB</label>
                    </div>
                </div>

                <div class="layui-form-item">
                    <label class="layui-form-label">备注</label>
                    <div class="layui-input-block">


                        @Html.TextAreaFor(c => c.Rmark, new Dictionary<string, object> { { "class", "layui-textarea" } })
                    </div>
                </div>
                <div class="layui-form-item">
                    <div class="layui-inline">
                        <label class="layui-form-label">排序:</label>
                        <div class="layui-input-inline">
                            @Html.TextBoxFor(c => c.Sort, new Dictionary<string, object> { { "lay-verify", "required" }, { "class", "layui-input" }, { "type", "number" }, { "Min", 0 } })
                        </div>
                    </div>

                    <div class="layui-inline">
                        <label class="layui-form-label">是否最后一门:</label>
                        <div class="layui-input-inline">

                            @{
                                if (Model != null)
                                {
                                    if (Model.IsEndCurr != null)
                                    {
                                        if ((bool)Model.IsEndCurr)
                                        {


                                            <input type="radio" name="IsEndCurr" value="0" title="不是">
                                            <input type="radio" name="IsEndCurr" value="1" title="是" checked="">
                                        }
                                        else
                                        {
                                            <input type="radio" name="IsEndCurr" value="0" title="不是" checked="">
                                            <input type="radio" name="IsEndCurr" value="1" title="是">
                                        }
                                    }
                                    else
                                    {
                                        <input type="radio" name="IsEndCurr" value="0" title="不是" checked="">
                                        <input type="radio" name="IsEndCurr" value="1" title="是">
                                    }


                                }
                                else
                                {
                                    <input type="radio" name="IsEndCurr" value="0" title="不是" checked="">
                                    <input type="radio" name="IsEndCurr" value="1" title="是">
                                }

                            }

                        </div>
                    </div>

                </div>
                <div style="text-align:center;">
                    <button class="layui-btn" lay-submit="" lay-filter="operation">确定</button>
                    <button class="layui-btn" style="text-align:center;" onclick="Close_My()">关闭</button>
                </div>
            </form>
           
        </div>

    </div>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/layui/layui.js"></script>
    <script src="~/Areas/Teaching/Scripts/Ajax.js"></script>
    <script src="~/Areas/CourseSyllabus/CourseOperation.js"></script>

    <script>
        layui.use(['form'], function () {

            var form = layui.form;

            form.render();

        });
    </script>
</body>
</html>
