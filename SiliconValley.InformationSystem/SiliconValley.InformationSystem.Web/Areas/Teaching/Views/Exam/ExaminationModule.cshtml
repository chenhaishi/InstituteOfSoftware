
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>考试讲解模块</title>
    <link href="~/Scripts/layui/css/layui.css" rel="stylesheet" />
    <link href="~/Areas/ExaminationSystem/js/trumbowyg/design/css/trumbowyg.css" rel="stylesheet" />
    <style>
        #mypaper {
            width: 80%;
            margin: 50px auto;
        }

        #examinfo {
            width: 100%;
            height: 150px;
        }

        .detail ul li {
            float: left;
            width: 200px;
        }

            .detail ul li span {
                color: green;
            }

        #examinfo .detail ul {
            list-style-type: none;
        }

        #ComputerQuestion {
            text-align: center;
            margin-top: 50px;
        }
    </style>
</head>
<body>
    <div id="mypaper" style="background:#ffffff">
        <input type="hidden" id="examid" value="考试模板" />
        <input type="hidden" id="BeginDate" value="2020-2-2" />
        <input type="hidden" id="limit" value="2020-2-2" />
        <div id="examinfo">
            <h2 style="text-align:center;"></h2><h2>机试</h2>

            <hr />
            <div class="detail">
                <ul>
                    <li><label>答题人-- </label><span></span>某某某</li>
                    <li><label>考室-- </label><span></span>某教室</li>
                    <li><label>时限-- </label><span>(小时)</span>2（小时）</li>
                    <li><label>选择题得分-- </label><span class="choiceQuestionScoreshuode">10</span></li>
                    <li><label>笔试题总分-- </label><span></span>30</li>
                    <li><label>机试题总分-- </label><span></span>60</li>
                </ul>
                <br />
            </div>

        </div>
        <div id="ComputerQuestion">
            <h3 style="text-align:center; font-size:18px;">机试题下载区</h3>
            <br />
            <br />
            <a class="layui-btn layui-btn-warm" href="/ExaminationSystem/StudentExamSys/ComputerQuestion">机试题下载</a>
            <input class="layui-btn layui-btn-primary" id="Upload" type="file" name="computerQuestion" />
            <button type="button" class="layui-btn layui-btn-warm" id="COMMIT">提交机试</button><text style="color:red">（请把项目打成压缩包并写上自己的名字）</text>
        </div>
    </div>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/layui/layui.js"></script>
    <script src="~/Scripts/underscore.js"></script>
    <script src="~/Areas/ExaminationSystem/js/trumbowyg/trumbowyg.min.js"></script>
    <script src="~/Areas/ExaminationSystem/js/trumbowyg/langs/fr.js"></script>
    <script src="~/Areas/ExaminationSystem/js/trumbowyg/plugins/upload/trumbowyg.upload.min.js"></script>
    <script src="~/Areas/ExaminationSystem/js/trumbowyg/plugins/base64/trumbowyg.base64.min.js"></script>
    <script src="~/Areas/ExaminationSystem/js/jiami.js"></script>
    <script>
        layui.use(['form', 'layer'], function () {
                //监听选择文件  表单数据
                //document.getElementById("Upload").addEventListener("change", function () {
                $("#Upload").change(function () {                    
                    var fileElem = document.getElementsByName("computerQuestion")[0];
                    //获取上传的文件
                    var file = fileElem.files[0];
                    console.log(file);
                    //上传条件 1.文件必须是压缩包(rar)
                    var index = file.name.lastIndexOf(".");
                    var suffix = file.name.substr(index + 1); //文件拓展名
                    if (suffix == "rar" || suffix == "zip") {
                        formData.append("rarfile", file);
                    } else {
                        layer.msg("请将文件压缩后再上产 (rar,zip)");
                    }

                });
            
            $("#COMMIT").click(function () {
                layer.open({
                    type: 1
                    , content: '<div style="padding: 20px 100px;">确认提交嘛？</div>'
                    , btn: ['确认', '取消']
                    , yes: function () {
                        layer.msg("成功！！！");
                        location.href = "/Base_SysManage/Base_SysMenu/Index";
                    }, btn2: function () {
                        layer.closeAll();
                    }
                });

            })
        })
        
        
    </script>
</body>
</html>
